<body>
  <script>
	//merci à http://bl.ocks.org/f94f/5554bf0a6874a64f46deacf3448ee5c8    
    var refData=[],refKey=[],refTag=[];
	var formatJour = d3.timeFormat("%d %B %Y");
	var formatAn = d3.timeFormat("%Y");

	function tempsToDate(temps, type) {
	  	var dRef, arrTemps = temps.split('-')
	  	if(arrTemps.length==3) dRef = [arrTemps[0], parseInt(arrTemps[1])-1, arrTemps[2]];
	  	if(arrTemps.length==2) dRef = [arrTemps[0], parseInt(arrTemps[1])-1, 1];
		if(arrTemps.length==1) dRef = [arrTemps[0], 0, 1];
		if(type=="utc") return Date.UTC(dRef[0], dRef[1], dRef[2]);
		else return new Date(dRef[0], dRef[1], dRef[2]);	
	}
	    
	//d3.csv('<?php echo $this->urlData;?>', function(err, d){
	//&dates[]=1158589136&dates[]=1461471206
	d3.json('http://localhost/jdc/public/flux/diigo?q=getTagHisto&idMonade=2&idUti=1&idActi=2&idParent=1&for=stream&dateUnit=%Y', function(err, d){

		
	  if(err) console.log(err);
	  //console.log(d)
	  
	  //création des datas de références
	  d.forEach(function(dt){
		  //transforme le temps en date
		  var dRef = tempsToDate(dt.temps, 'utc');
		  refData[dt.key+'-'+dRef] = dt;
		  if(refKey.indexOf(dt.key)<0)refKey.push(dt.key);
		  if(!refTag[dt.key])refTag[dt.key]={"type":dt.type,"desc":dt.desc};
	  });
	  var nested_data = d3.nest()
			.key(function(d) { return d.temps; })
			.entries(d);
	  
	  //console.log(nested_data);
	  
	  var mqpdata = nested_data.map(function(d){
	    var obj = {
	      month: tempsToDate(d.key),
	    }
	    
	    d.values.forEach(function(v){
	      obj[v.key] = v.value;
	      //console.log(d.value)
	    })
	    
	    return obj;
	  })
	  
	  buildStreamGraph(mqpdata);
	  
	})

function buildStreamGraph(mqpdata) {
	var data = mqpdata;
	  
	
	var stack = d3.stack()
	    .keys(refKey)
	    .order(d3.stackOrderNone)
	    .offset(d3.stackOffsetWiggle);
	
	var series = stack(data);
		
	var width = 850,
	    height = 600;
	var extData = d3.extent(data, function(d){ return d.month; });
	var y = d3.scaleTime()
	    .domain([extData[1],extData[0]])
	    .range([100, height]);
	
	// setup axis
	var yAxis = d3.axisLeft(y);
	  
	var x = d3.scaleLinear()
	    .domain([0, d3.max(series, function(layer) { return d3.max(layer, function(d){ return d[0] + d[1];}); })])
	    .range([width/2, -200]);
	
	var color = d3.scaleLinear()
	    .range(["#51D0D7", "#31B5BB"]);
	
	var color = d3.scaleOrdinal(d3.schemeCategory20);
	
	
	var area = d3.area()
		.y(function(d) { 
			//console.info('in area function', d); 
			return y(d.data.month); 
			})
		.x0(function(d) { return x(d[0]); })
		.x1(function(d) { return x(d[1]); })
		.curve(d3.curveBasis);
	
	
	  var tooltip = d3.select("body").append("div")
		.attr("class", "tooltip");
	  
	var svg = d3.select("body").append("svg")
	    .attr("width", width)
	    .attr("height", height);
	
	svg.selectAll("path")
	    .data(series)
	    .enter().append("path")
	    .attr("d", area)
	    .style("fill", function() { return color(Math.random()); })
	    .on('mouseover', function(d){      
		    d3.select(this).style('fill',d3.rgb( d3.select(this).style("fill") ).brighter());
			d3.select("#major").text(refTag[d.key].type);
			tooltip.transition()
               .duration(700)
               .style("opacity", 1);
	    })
	    .on('mousemove', function(d){      
			console.log(d);
	    	var mouse = d3.mouse(this);		    
	    	var jour = formatJour(y.invert(mouse[1]));
	    	var an = formatAn(y.invert(mouse[1]));
			var dRef = Date.UTC(an, 0, 1);	    	
			tooltip.html(refTag[d.key].type+" = "+refData[d.key+dRef]+"<br/>"+jour)
	               .style("left", (d3.event.pageX + 5) + "px")
	               .style("top", (d3.event.pageY - 28) + "px");
	    })
	    .on('mouseout', function(d){      
	      d3.select(this).style('fill', 
	         d3.rgb( d3.select(this).style("fill") ).darker());
	         d3.select("#major").text("");
	  tooltip.transition()
	               .duration(500)
	               .style("opacity", 0);
	})
	
	svg.append("g")
	            .attr("class", "axis axis--y")
	            .attr("transform", "translate(" + 40 + "," + 0 + ")")
	            .call(yAxis);  
  
  	var yAxisGroup = svg.append("g").call(yAxis);
}
   
  </script>
