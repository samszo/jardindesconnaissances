		/*
		* Source: https://gist.github.com/lrvick/2080648
		* convert 0..255 R,G,B values to a hexidecimal color string
		*/
		RGBToHex = function(r,g,b){
		    var bin = r << 16 | g << 8 | b;
		    return (function(h){
		        return new Array(7-h.length).join("0")+h;
		    })(bin.toString(16).toUpperCase());
		}

		function montrerMeteo(){

			//suppression du texte existant
			cacherMeteo();

			//décalage du conteneur par rapport au clic
			var x_decalage = this.getBBox().x;
			var y_decalage = this.getBBox().y;

			//coordonnées du centre du cercle
			var x_centre = this.getBBox().width / 2;
			var y_centre = this.getBBox().height / 2;

			//coordonnées du clic de la souris par rapport au cercle
			var x_click = d3.mouse(this)[0] - x_decalage;
			var y_click = d3.mouse(this)[1] - y_decalage;

			//distance de chaque coordonnée du clic par rapport au centre du cercle
			var dist_x_centre = x_click - x_centre;
			var dist_y_centre = y_click - y_centre;

			//distance entre le point cliqué et le centre du cercle
			var dist_centre = Math.sqrt(Math.pow(dist_x_centre, 2) + Math.pow(dist_y_centre, 2));

			//cosinus et sinus de l'angle formé entre le clic et le centre du cercle
			var cos = dist_x_centre / dist_centre;
			var sin = -dist_y_centre / dist_centre;
			
			if(sin > 0){
				if(cos > 0){
					//C'est l'été, affiche un texte au dessus de l'élément adapté
					d3.select("#g19495")
		    		    .append("text")
		    		    .attr("id", "textMeteo")
		    		    .attr("x", this.getBBox().x + 300)
		    		    .attr("y", this.getBBox().y + 50)
		    		    .style("font-style", "italic")
		    		    .text("Ensoleille");
				}
				else{
					//C'est le printemps affiche un texte au dessus de l'élément adapté
					d3.select("#g17519")
		    		    .append("text")
		    		    .attr("id", "textMeteo")
		    		    .attr("x", this.getBBox().x - 10)
		    		    .attr("y", this.getBBox().y + 65)
		    		    .style("font-style", "italic")
		    		    .text("Nuageux");
				}
			}
			else{
				if(cos > -0.2){
					//C'est l'automne, affiche un texte au dessus de l'élément adapté
					d3.select("#g18721")
		    		    .append("text")
		    		    .attr("id", "textMeteo")
		    		    .attr("x", this.getBBox().x + 280)
		    		    .attr("y", this.getBBox().y + 300)
		    		    .style("font-style", "italic")
		    		    .text("Pluvieux");
				}
				else{
					//C'est l'hiver, affiche un texte au dessus de l'élément adapté
					d3.select("#g18962")
		    		    .append("text")
		    		    .attr("id", "textMeteo")
		    		    .attr("x", this.getBBox().x - 10)
		    		    .attr("y", this.getBBox().y + 300)
		    		    .style("font-style", "italic")
		    		    .text("Glacial");
				}
			}
		}

		function cacherMeteo(){
			d3.select("#textMeteo")
		    .remove();
		}


